1.   #include <iostream>
   using namespace std;
int main()
{
    setlocale (LC_ALL, "RU");
   
    cout << "Исполнитель: Дискотека Авария\n"<< endl;
    cout << "Песня: Новогодняя.\n";
    cout << "Новый год к нам мчится\n";
    cout << "Скоро все случится\n";
    cout << "Сбудется, что снится\n";
    cout << "Что опять нас обманут, ничего не дадут.\n";
    
    return 0;

}



